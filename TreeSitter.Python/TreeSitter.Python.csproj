<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <PackageId>TreeSitter.Python</PackageId>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <PackageProjectUrl>https://github.com/profmagija/dotnet-tree-sitter</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\TreeSitter\TreeSitter.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Update="tree-sitter-python.so">
          <Pack>True</Pack>
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
        <None Include="..\LICENSE.txt">
            <Pack>True</Pack>
            <PackagePath>LICENSE.txt</PackagePath>
        </None>
    </ItemGroup>

</Project>
